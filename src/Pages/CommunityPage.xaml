<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStream.Pages.CommunityPage"
             BackgroundColor="{StaticResource SteamDarkBlue}">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource SteamDarkerBlue}"
              Padding="15,12"
              ColumnDefinitions="*,Auto">
            <Label Text="Community"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="{StaticResource SteamTextLight}"
                   VerticalOptions="Center"/>
            <Label Grid.Column="1"
                   Text="ðŸ””"
                   FontSize="20"
                   VerticalOptions="Center"/>
        </Grid>
        
        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15" Spacing="20">
                <!-- Section tabs -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="20">
                        <Label Text="Activity" TextColor="{StaticResource SteamOrange}" FontSize="14" FontAttributes="Bold"/>
                        <Label Text="Discussions" TextColor="{StaticResource SteamTextDark}" FontSize="14"/>
                        <Label Text="Workshop" TextColor="{StaticResource SteamTextDark}" FontSize="14"/>
                        <Label Text="Market" TextColor="{StaticResource SteamTextDark}" FontSize="14"/>
                        <Label Text="Broadcasts" TextColor="{StaticResource SteamTextDark}" FontSize="14"/>
                    </HorizontalStackLayout>
                </ScrollView>
                
                <!-- Activity feed -->
                <VerticalStackLayout Spacing="15">
                    <!-- Activity item 1 -->
                    <Border BackgroundColor="{StaticResource SteamCardDark}" StrokeThickness="0" Padding="15">
                        <Border.StrokeShape><RoundRectangle CornerRadius="10"/></Border.StrokeShape>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Border WidthRequest="40" HeightRequest="40" StrokeThickness="0" BackgroundColor="{StaticResource SteamOrange}">
                                    <Border.StrokeShape><RoundRectangle CornerRadius="20"/></Border.StrokeShape>
                                    <Label Text="ðŸ‘¤" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="Alex is now playing" TextColor="White" FontSize="14"/>
                                    <Label Text="2 minutes ago" TextColor="{StaticResource SteamTextDark}" FontSize="11"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Border HeightRequest="120" StrokeThickness="0">
                                <Border.StrokeShape><RoundRectangle CornerRadius="8"/></Border.StrokeShape>
                                <Image Source="https://cdn.cloudflare.steamstatic.com/steam/apps/1245620/header.jpg" Aspect="AspectFill"/>
                            </Border>
                            <Label Text="Elden Ring" TextColor="{StaticResource SteamLightBlue}" FontSize="14" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Activity item 2 -->
                    <Border BackgroundColor="{StaticResource SteamCardDark}" StrokeThickness="0" Padding="15">
                        <Border.StrokeShape><RoundRectangle CornerRadius="10"/></Border.StrokeShape>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Border WidthRequest="40" HeightRequest="40" StrokeThickness="0" BackgroundColor="#5c7e10">
                                    <Border.StrokeShape><RoundRectangle CornerRadius="20"/></Border.StrokeShape>
                                    <Label Text="ðŸ‘¤" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="Sarah earned an achievement" TextColor="White" FontSize="14"/>
                                    <Label Text="15 minutes ago" TextColor="{StaticResource SteamTextDark}" FontSize="11"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" Padding="5,0">
                                <Label Text="ðŸ†" FontSize="30"/>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="Lord of Cinder" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                                    <Label Text="Defeat the final boss" TextColor="{StaticResource SteamTextDark}" FontSize="12"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Activity item 3 -->
                    <Border BackgroundColor="{StaticResource SteamCardDark}" StrokeThickness="0" Padding="15">
                        <Border.StrokeShape><RoundRectangle CornerRadius="10"/></Border.StrokeShape>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Border WidthRequest="40" HeightRequest="40" StrokeThickness="0" BackgroundColor="#4a90d9">
                                    <Border.StrokeShape><RoundRectangle CornerRadius="20"/></Border.StrokeShape>
                                    <Label Text="ðŸ‘¤" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="Mike reviewed a game" TextColor="White" FontSize="14"/>
                                    <Label Text="1 hour ago" TextColor="{StaticResource SteamTextDark}" FontSize="11"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Label Text="&quot;Best game I've played this year! The story is incredible and the gameplay is smooth.&quot;" TextColor="{StaticResource SteamTextLight}" FontSize="13"/>
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ‘" FontSize="14"/>
                                <Label Text="Recommended" TextColor="{StaticResource SteamGreen}" FontSize="13"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
