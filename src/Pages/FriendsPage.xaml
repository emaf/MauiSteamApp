                            </Border>
                        </Grid>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                            <Label Text="Alex" TextColor="{StaticResource SteamGreen}" FontSize="15" FontAttributes="Bold"/>
